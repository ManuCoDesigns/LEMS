# Application
NODE_ENV=development
APP_NAME=LEMS

# Server Configuration
PORT=5000
CLIENT_URL=http://localhost:3000

# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/lems_db"

# Database - MongoDB
MONGODB_URI="mongodb://localhost:27017/lems_analytics"

# Redis (we'll set this up later)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets
JWT_ACCESS_SECRET=your_super_secret_jwt_access_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_key_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (we'll set this up later)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@lems.com

# SMS Configuration (we'll set this up later)
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_ID=LEMS

# Payment Gateway (we'll set this up later)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AI Integration (we'll set this up later)
OPENAI_API_KEY=

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100